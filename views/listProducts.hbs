
  <h3 class="text-primary">Vista de Productos</h1>
  {{#if products.length}}
  <div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody class="align-middle">
      {{#each products}}
      <tr>
        <td style="vertical-align: middle;">{{this.title}}</td>
        <td style="vertical-align: middle;">$ {{this.price}}</td>
        <td class="w-25">
          <img src={{this.thumbnail}} style="width: 50px;" />
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
  {{else}}
  <div class="container">
    <div class="container bg-warning pb-5">
      <h3>No se encontraron productos cargados</h1>
    </div>
  </div>
  {{/if}}